{
  "name": "scam-shield-backend",
  "version": "2.0.0",
  "description": "Production-ready backend for Bhai Scam Shield with 8 APIs + all fixes",
  "main": "index.js",
  "private": true,
  "type": "commonjs",
  "engineStrict": true,
  "engines": {
    "node": "18.x",
    "npm": ">=9.0.0"
  },
  "scripts": {
    "start": "cross-env NODE_ENV=production node index.js",
    "dev": "cross-env NODE_ENV=development nodemon index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "health": "node healthcheck.js",
    "audit": "npm audit --audit-level=high",
    "postinstall": "npm rebuild",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "lint:ci": "eslint . --max-warnings=0",
    "prepare": "husky install || true",
    "deploy": "railway up",
    "docker:build": "docker build -t scam-shield-backend .",
    "docker:run": "docker run -p 3000:3000 scam-shield-backend"
  },
  "dependencies": {
    "express": "4.18.2",
    "cors": "2.8.5",
    "helmet": "7.1.0",
    "compression": "1.7.4",
    "express-rate-limit": "7.1.5",
    "express-validator": "7.0.1",
    "axios": "1.6.7",
    "node-cache": "5.1.2",
    "winston": "3.11.0",
    "uuid": "9.0.1",
    "dotenv": "16.3.1",
    "cross-env": "7.0.3",
    "ioredis": "5.3.2",
    "p-limit": "4.0.0",
    "prom-client": "15.0.0"
  },
  "devDependencies": {
    "nodemon": "3.1.0",
    "jest": "29.7.0",
    "supertest": "6.3.4",
    "eslint": "8.57.0",
    "eslint-config-airbnb-base": "15.0.0",
    "eslint-plugin-import": "2.29.1",
    "@types/node": "20.11.0",
    "prettier": "3.2.5",
    "husky": "9.0.11",
    "lint-staged": "15.2.2"
  },
  "keywords": [
    "crypto",
    "scam-detector",
    "blockchain",
    "security",
    "etherscan",
    "bscscan",
    "coinmarketcap",
    "virustotal",
    "whoisfreaks",
    "chainbase"
  ],
  "author": "Bhai Scam Shield",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/narayan252/scam-shield-backend.git"
  },
  "bugs": {
    "url": "https://github.com/narayan252/scam-shield-backend/issues"
  },
  "homepage": "https://github.com/narayan252/scam-shield-backend#readme",
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
